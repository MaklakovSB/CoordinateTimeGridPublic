        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <StackPanel>
                <Label Content="Цвет разметочной сетки." />
                <xctk:ColorPicker x:Name="_colorPicker" SelectedColor="{Binding SelectedColor, ElementName=rootWindow, Mode=TwoWay}" />
            </StackPanel>

            <StackPanel>
                <Label Content="Тест изменения толщины разметочной сетки." />
                <Slider x:Name="sliderStrokeThickness"
                        Width="{Binding Path=ActualWidth,
                                        ElementName=testLabelStrokeThickness}"
                        Maximum="1.7"
                        Minimum="0.0008"
                        SmallChange="0.01"
                        Value="0.2" />
            </StackPanel>

            <StackPanel>
                <CheckBox Content="Показывать окно отладочной информации." IsChecked="{Binding IsDebugInfoVisibilityChecked, ElementName=rootWindow, Mode=TwoWay}" />
                <CheckBox Content="Показывать горизонтальную полосу прокрутки." IsChecked="{Binding IsHorizontalScrollBarVisibilityChecked, ElementName=rootWindow, Mode=TwoWay}" />
                <CheckBox Content="Показывать вертикальную полосу прокрутки." IsChecked="{Binding IsVerticalScrollBarVisibilityChecked, ElementName=rootWindow, Mode=TwoWay}" />
            </StackPanel>

            <StackPanel>
                <CheckBox Content="Блокировать масштабирование по оси Х." IsChecked="{Binding IsBlockingScaleX, ElementName=rootWindow}"/>
                <CheckBox Content="Блокировать масштабирование по оси Y." IsChecked="{Binding IsBlockingScaleY, ElementName=rootWindow}"/>
            </StackPanel>
        </StackPanel>
